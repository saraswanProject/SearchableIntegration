<div id="login-app">
    <login></login>
</div>
<script type="text/x-template" id="login-template">
       <div id="login-app" class="login-wrapper">
        <div class="container">
            <div class="row justify-content-center align-items-center min-vh-100">
                <div class="col-md-5 col-lg-4">
                    <!-- Login Form -->
                    <div class="card shadow-lg p-4 rounded-4" v-if="!showSignup">
                        <div class="card-header bg-transparent text-center border-0">
                            <h4 class="fw-bold text-primary">Login</h4>
                        </div>
                        <div class="card-body">
                            <form v-on:submit.prevent="submitLogin">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" v-model="credentials.email" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Password</label>
                                    <input type="password" class="form-control" v-model="credentials.password" required />
                                </div>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-primary" type="submit">Login</button>
                                    <p class="text-center mt-3">
                                        Don't have an account?
                                        <a href="#" class="text-decoration-none" @@click.prevent="toggleSignup">Sign up</a>
                                    </p>
                                </div>
                                <div v-if="error" class="alert alert-danger mt-3">{{ error }}</div>
                            </form>
                        </div>
                    </div>

                    <!-- Signup Form -->
                    <div class="card shadow-lg p-4 rounded-4" v-if="showSignup">
                        <div class="card-header bg-transparent text-center border-0">
                            <h4 class="fw-bold text-primary">Create Account</h4>
                        </div>
                        <div class="card-body">
                            <form v-on:submit.prevent="submitSignup">
                                <div class="mb-3">
                                    <label class="form-label">Full Name</label>
                                    <input type="text" class="form-control" v-model="signupData.name" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" v-model="signupData.email" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Password</label>
                                    <input type="password" class="form-control" v-model="signupData.password" required />
                                </div>
                                    <div class="mb-3">
                                         <label class="form-label">User Role</label>
                                         <select class="form-select" v-model="signupData.role" required>
                                             <option value="" disabled selected>Select a role</option>
                                             <option value="User">User</option>
                                             <option value="Admin">Admin</option>
                                         </select>
                                     </div>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-primary" type="submit">Sign Up</button>
                                    <p class="text-center mt-3">
                                        Already have an account?
                                        <a href="#" class="text-decoration-none" @@click.prevent="toggleSignup">Login</a>
                                    </p>
                                </div>
                                <div v-if="signupError" class="alert alert-danger mt-3">{{ signupError }}</div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>


